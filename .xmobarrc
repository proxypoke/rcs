Config	{ font = "xft:Clean:size=8:antialias=true"
		, bgColor = "black"
		, fgColor = "green"
		, position = Top
		, lowerOnStart = True
		, border = NoBorder
		, borderColor = "black"
		, commands =	[ Run Memory ["-t","Mem: <usedratio>%"] 10
				, Run Swap [] 10
				, Run Network "eth0" ["-L","0","-H","8000","--normal","green","--high","red"] 10
				, Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
				, Run StdinReader
				]
		, sepChar = "%"
		, alignSep = "}{"
		, template = " %StdinReader% } %cpu% | %memory% | %swap% { %eth0% | <fc=#ee9a00>%date%</fc>"
		}
