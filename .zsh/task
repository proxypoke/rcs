# Taskwarrior related functions. Currently not used.

urgent () {
	echo $(task due:tomorrow | tail -1 | grep "[0-9]\+")
}

overdue () {
	echo $(task overdue | tail -1 | grep "[0-9]\+")
}

echo

echo "You have $(task 2>&1 | tail -1)."

if [ -n "$(urgent)" ]; then
	echo "Urgent: $(urgent)"
fi

if [ -n "$(overdue)" ]; then
	echo "Overdue: $(overdue)"
fi

echo
