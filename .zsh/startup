# Stuff displayed when the shell starts.

urgent () {
	echo $(task due:tomorrow | tail -1 | grep "[0-9]\+")
}

overdue () {
	echo $(task overdue | tail -1 | grep "[0-9]\+")
}

echo "Semper vigilo. Bona fides. Attere dominatum."

echo

echo "You have $(task | tail -1)."

if [ -n "$(urgent)" ]; then
	echo "Urgent: $(urgent)"
fi

if [ -n "$(overdue)" ]; then
	echo "Overdue: $(overdue)"
fi

echo
