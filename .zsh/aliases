#general
alias o='xdg-open'
alias v='vim -p'
alias g='git'
alias t='urxvt -cd $PWD &>/dev/null &; disown'
alias f='ffbeta'
alias s='sudo'
alias untar='tar xfv'

alias l='ll -A'
alias ls='ls --color=auto'
alias ll='ls -l --color=auto'
alias la='ls -a --color=auto'

alias r='rsync -avzP'
alias cp='rsync -azq'

alias grep='grep --color'

alias mnt='mount'
alias umnt='umount'

#alias mame='sdlmame -rp .'

# pacman aliases
alias pss='pacman -Ss'

alias pq='pacman -Q'
alias pql='pacman -Ql'
alias pqi='pacman -Qi'

#c aliases
alias cc="gcc -Wall -Wshadow -Wextra --std=c99 -Werror"

#python aliases
alias py='python'
alias bpy='bpython'
alias ipy='ipython'

alias py2='python2.7'
alias bpy2='bpython2'
alias ipy2='clear && ipython2'

alias nt="nosetests3"
