color () {
	echo "%B%(!.%F{red}.%F{blue})$*%f%b"
}

# First line
#
PROMPT=$(color "┌─[")
# username
PROMPT+="%B%F{green}%n%f%b"
# the @
PROMPT+="%F{magenta}@%f"
# hostname
PROMPT+="%F{blue}%m%f"

PROMPT+=$(color "]")
PROMPT+=" - "
PROMPT+=$(color "[")

# working directory
PROMPT+="%B%F{white}%~%f%b"

PROMPT+=$(color "]")

# return code
PROMPT+=$'%(0?..\n'
PROMPT+=$(color '├─[')
PROMPT+='%F{red}Nonzero return: %?%f'
PROMPT+=$(color ']')
PROMPT+=')'


# Second line
#
PROMPT+=$'\n'
PROMPT+=$(color "└─[")
# change the prompt character
PROMPT+="%F{mag}%(!.#.$)%f"
PROMPT+=$(color "]> ")
# finally, a bell
PROMPT+=$'\a'
